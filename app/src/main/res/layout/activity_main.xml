<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add a title to the layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="App Launcher"
        android:layout_marginBottom="16dp" />

    <!-- Use a CardView to group the buttons -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Buttons with improved styling -->
            <Button
                android:id="@+id/btn_calling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calling"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:backgroundTint="@color/primary_color"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_web_browser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Web Browser"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:backgroundTint="@color/primary_color"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_music_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Music Player"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:backgroundTint="@color/primary_color"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gmail"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:backgroundTint="@color/primary_color"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_share_app_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share App Link"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:backgroundTint="@color/primary_color"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_google_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Map"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:backgroundTint="@color/primary_color"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_play_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play Store"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:backgroundTint="@color/primary_color"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:backgroundTint="@color/primary_color"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gallery"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:backgroundTint="@color/primary_color"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:backgroundTint="@color/primary_color"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>